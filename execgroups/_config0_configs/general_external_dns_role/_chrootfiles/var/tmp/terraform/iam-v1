# general-external-dns-iam.tf - Create this once for all clusters

# General IAM policy for ExternalDNS
resource "aws_iam_policy" "external_dns_general" {
  name        = "GeneralExternalDNS-Policy"
  description = "General IAM policy for ExternalDNS to manage Route53 records"

  policy = jsonencode({
    Version = "2012-10-17"
    Statement = [
      {
        Effect = "Allow"
        Action = [
          "route53:ChangeResourceRecordSets"
        ]
        Resource = "arn:aws:route53:::hostedzone/*"
      },
      {
        Effect = "Allow"
        Action = [
          "route53:ListHostedZones",
          "route53:ListResourceRecordSets",
          "route53:GetChange"
        ]
        Resource = "*"
      }
    ]
  })

  tags = {
    Name      = "GeneralExternalDNS-Policy"
    Component = "external-dns"
    Purpose   = "general-route53-management"
  }
}

# General IAM role for ExternalDNS
resource "aws_iam_role" "external_dns_general" {
  name        = "GeneralExternalDNS-Role"
  description = "General IAM role for ExternalDNS across EKS clusters"

  assume_role_policy = jsonencode({
    Version = "2012-10-17"
    Statement = [
      {
        Effect = "Allow"
        Principal = {
          AWS = "arn:aws:iam::${data.aws_caller_identity.current.account_id}:root"
        }
        Action = "sts:AssumeRole"
        Condition = {
          StringLike = {
            "aws:userid" = "*:external-dns-*"
          }
        }
      }
    ]
  })

  tags = {
    Name      = "GeneralExternalDNS-Role"
    Component = "external-dns"
    Purpose   = "general-cross-cluster-role"
  }
}

# Attach the general policy to the general role
resource "aws_iam_role_policy_attachment" "external_dns_general" {
  role       = aws_iam_role.external_dns_general.name
  policy_arn = aws_iam_policy.external_dns_general.arn
}
